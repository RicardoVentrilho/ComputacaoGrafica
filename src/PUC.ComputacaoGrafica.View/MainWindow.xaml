<Window x:Class="PUC.ComputacaoGrafica.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:PUC.ComputacaoGrafica.View"
        Title="Transformacoes" 
        Height="500" 
        Width="500"
        MaxHeight="700"
        MinHeight="700"
        MaxWidth="850"
        MinWidth="850">
    <Grid Background="LightBlue" HorizontalAlignment="Left" Width="840">
        <!-- PONTOS -->
        <Grid HorizontalAlignment="Left" Height="500" Margin="510,10,0,0" VerticalAlignment="Top" Width="163" RenderTransformOrigin="0.351,0.489">
            <!-- DESCRIÇÃO -->
            <Label Content="Ponto&#xD;&#xA;" HorizontalAlignment="Left" Margin="9,0,0,0" VerticalAlignment="Top" Width="95" Height="28"/>

            <!-- COORDENADAS -->
            <TextBox x:Name="caixaDeTextoX" HorizontalAlignment="Left" Height="22" Margin="10,28,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="143"/>
            <TextBox x:Name="caixaDeTextoY" HorizontalAlignment="Left" Height="22" Margin="10,55,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="143"/>
            <TextBox x:Name="caixaDeTextoZ" HorizontalAlignment="Left" Height="22" Margin="10,0,0,396" TextWrapping="Wrap" Text="0" VerticalAlignment="Bottom" Width="143"/>

            <!-- BOTÃO -->
            <Button x:Name="botaoAdicionar" Content="Adicionar" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" Width="143" Click="AdicionePonto"/>
            <Label Content="Arestas&#xA;" HorizontalAlignment="Left" Margin="10,158,0,0" VerticalAlignment="Top" Width="95" Height="28"/>
            
            <ListBox x:Name="arestasListBox" HorizontalAlignment="Left" Height="314" Margin="10,186,0,0" VerticalAlignment="Top" Width="143"/>
        </Grid>

        <!-- PLANO CARTESIANO -->
        <view:PlanoCartesiano x:Name="_PlanoCartesiano" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" MouseLeftButtonDown="CliqueBotaoEsquerdo" Grid.RowSpan="4"/>

        <!-- TRANSFORMAÇÕES -->
        <Grid HorizontalAlignment="Left" Height="149" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="820" Grid.Row="3">
            <!-- TRANSLAÇÃO -->
            <Grid HorizontalAlignment="Left" Height="149" VerticalAlignment="Top" Width="106">
                <!-- DESCRIÇÃO -->
                <Label Content="TRANSLAÇÃO" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="86"/>

                <!-- DESLOCAMENTO -->
                <TextBox x:Name="deslocamentoXTextBox" HorizontalAlignment="Left" Height="22" Margin="28,41,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="68"/>
                <TextBox x:Name="deslocamentoYTextBox" HorizontalAlignment="Left" Height="22" Margin="28,68,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="68"/>
                <TextBox x:Name="deslocamentoZTextBox" HorizontalAlignment="Left" Height="22" Margin="28,95,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="68"/>

                <!-- BOTÃO CALCULAR -->
                <Button Content="CALCULE" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top" Width="86" Click="Translade"/>
                <Label Content="X" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="18" Height="25"/>
                <Label Content="Y" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" Width="18" Height="27"/>
                <Label Content="Z" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" Width="18" Height="27"/>
            </Grid>

            <!-- ROTAÇÃO -->
            <Grid HorizontalAlignment="Left" Height="148" VerticalAlignment="Top" Width="106" Margin="106,1,0,0" >
                <Label Content="ROTAÇÃO" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="86" Height="26"/>

                <!-- ÂNGULO -->
                <Label Content="ÂNGULO" HorizontalAlignment="Left" Margin="5,41,0,0" VerticalAlignment="Top" Width="61" Height="27"/>
                <TextBox x:Name="anguloTextBox" HorizontalAlignment="Left" Height="22" Margin="66,43,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="30" RenderTransformOrigin="0.253,-0.258"/>

                <!-- EIXO -->
                <ComboBox x:Name="eixosComboBox" HorizontalAlignment="Left" Margin="5,73,0,0" VerticalAlignment="Top" Width="91"/>

                <!-- BOTÃO CALCULAR -->
                <Button Content="CALCULE" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" Width="86" Height="20" Click="Rotacione"/>
            </Grid>
        </Grid>
    </Grid>
</Window>







